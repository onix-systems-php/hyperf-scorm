{
  "name": "onix-systems-php/hyperf-scorm",
  "type": "extension",
  "license": "MIT",
  "keywords": [
    "php",
    "hyperf",
    "scorm"
  ],
  "description": "Onix Hyperf SCORM extension",
  "autoload": {
    "psr-4": {
      "OnixSystemsPHP\\HyperfScorm\\": "src/",
      "OnixSystemsPHP\\HyperfScormTest\\": "./test/"
    }
  },
  "authors": [
    {
      "name": "Dmytro Bekeshenko",
      "email": "dmytro.bekeshenko@onix-systems.com"
    }
  ],
  "require": {
    "php": ">=8.1",
    "onix-systems-php/hyperf-core": ">=1.3.0",
    "onix-systems-php/hyperf-actions-log": "^1.2",
    "league/flysystem": "^2.0|^3.0",
    "hyperf/guzzle": "~3.1",
    "friendsofhyperf/helpers": "^3.1",
    "hyperf/view": "^3.1",
    "hyperf/view-engine": "^3.1",
    "ramsey/uuid": "~4.7",
    "yzen.dev/plain-to-class": "^3.0.5",
    "hyperf/database": "^3.1",
    "hyperf/config": "^3.1",
    "hyperf/contract": "^3.1",
    "hyperf/db-connection": "^3.1",
    "hyperf/validation": "^3.1",
    "hyperf/di": "~3.1"
  },

  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0",
    "mockery/mockery": "^1.0",
    "phpstan/phpstan": "^1.0",
    "phpunit/phpunit": ">=7.0",
    "swoole/ide-helper": "^4.5|^5.0"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "analyse": "phpstan analyse --memory-limit 1024M -l 0 ./src",
    "cs-fix": "php-cs-fixer fix $1",
    "test": ["php ./vendor/bin/co-phpunit --prepend  test/bootstrap.php -c phpunit.xml --colors=always"]
  },
  "extra": {
    "hyperf": {
      "config": "OnixSystemsPHP\\HyperfCore\\ConfigProvider"
    }
  }
}
